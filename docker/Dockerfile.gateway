FROM golang:1.21-alpine AS builder

WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN go build -o bin/api-gateway ./services/api-gateway

FROM alpine:latest
RUN apk --no-cache add ca-certificates
WORKDIR /app

COPY --from=builder /app/bin/api-gateway .
COPY --from=builder /app/demo ./demo

EXPOSE 8080
CMD ["./api-gateway"]